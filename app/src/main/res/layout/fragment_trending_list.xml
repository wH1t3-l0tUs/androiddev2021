<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ui.reader.TrendingFragment"
android:orientation="vertical">

<FrameLayout
    android:id="@+id/progress_bar_trending"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="4dp">

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:indeterminate="true"/>
</FrameLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/listTrending"
    android:name="com.usth.wordpress.ui.reader.TrendingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context=".ui.reader.TrendingFragment"
    tools:listitem="@layout/fragment_trending_item" />
</LinearLayout>